<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="agri_field_view_search">
        <field name="name">agri.field.search</field>
        <field name="model">agri.field</field>
        <field name="arch" type="xml">
           <search string="Fields">
                <field name="name"/>
                <field name="farm_id"/>
                <separator/>
                <field name="cropping_potential_id"/>
                <field name="effective_depth_id"/>
                <field name="irrigation_type_id"/>
                <field name="land_class_id"/>
                <field name="soil_texture_id"/>
                <field name="terrain_id"/>
                <field name="water_source_id"/>
                <separator/>
                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Irrigated" name="filter_irrigated" domain="[('irrigated', '=', True)]"/>
                <filter string="Not located" name="filter_not_located" domain="[('boundary', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Farm" name="group_farm" context="{'group_by': 'farm_id'}"/>
                    <filter string="Land Class" name="group_land_class" context="{'group_by': 'land_class_id'}"/>
                    <filter string="Cropping Potential" name="group_cropping_potential" context="{'group_by': 'cropping_potential_id'}"/>
                    <filter string="Effective Depth" name="group_effective_depth" context="{'group_by': 'effective_depth_id'}"/>
                    <filter string="Irrigation Type" name="group_irrigation_type" context="{'group_by': 'irrigation_type_id'}"/>
                    <filter string="Soil Texture" name="group_soil_texture" context="{'group_by': 'soil_texture_id'}"/>
                    <filter string="Terrain" name="group_terrain" context="{'group_by': 'terrain_id'}"/>
                    <filter string="Water Source" name="group_swater_source" context="{'group_by': 'water_source_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="agri_field_view_tree">
        <field name="name">agri.field.tree</field>
        <field name="model">agri.field</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Fields">
                <field name="name"/>
                <field name="area_ha"/>
                <field name="farm_id"/>
                <field name="land_class_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="agri_field_view_form">
        <field name="name">agri.field.form</field>
        <field name="model">agri.field</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Fields">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="farm_id" />
                            <field name="area_ha" attrs="{'readonly': [('has_boundary', '!=', False)]}"/>
                            <field name="has_boundary" invisible="1"/>
                            <field name="established_date" />
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="land_class_id"/>
                            <field name="cropping_potential_id"/>
                            <field name="effective_depth_id"/>
                            <field name="irrigation_type_id"/>
                            <field name="irrigated" invisible="1"/>
                        </group>
                        <group>
                            <field name="soil_texture_id"/>
                            <field name="terrain_id"/>
                            <field name="water_source_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="agri_field_action" model="ir.actions.act_window">
        <field name="name">Fields</field>
        <field name="res_model">agri.field</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Field
            </p>
        </field>
    </record>

    <menuitem name="Fields" id="menu_item_agri_fields"
        parent="menu_agri_farms" 
        sequence="6"
        action="agri_field_action"/>

</odoo>
