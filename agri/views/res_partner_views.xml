<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view" >
        <field name="name">view.partner.form.inherit.agri</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <field name="farmland_id" invisible="1"/>
                <button name="%(agri.agri_farm_action)d"
                        context="{'search_default_partner_id': active_id,
                                  'default_partner_id': active_id,
                                  'default_farmland_id': farmland_id}"
                        type="action"
                        class="oe_stat_button oe_inline"
                        icon="fa-leaf">
                    <field name="farm_count"
                           widget="statinfo"
                           string="Farms"/>
                </button>
            </div>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">view.partner.filter.inherit.agri</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="farmland_id" string="Farm"
                    filter_domain="[('farmland_id.farm_ids', 'ilike', self)]"/>
            </field>
        </field>
    </record>

</odoo>
