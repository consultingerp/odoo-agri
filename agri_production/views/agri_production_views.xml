<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- agri.production.schedule.line views -->

    <record id="agri_production_schedule_line_view_tree" model="ir.ui.view">
        <field name="name">agri.production.schedule.line.view.tree</field>
        <field name="model">agri.production.schedule.line</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Production Schedule Lines">
                <field name="budget_category_id"/>
                <field name="date"/>
                <field name="quantity"/>
                <field name="quantity_uom_id" string="Units"/>
                <field name="currency_id" invisible="1"/>
                <field name="amount"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <record id="agri_production_schedule_line_view_form" model="ir.ui.view">
        <field name="name">agri.production.schedule.line.view.form</field>
        <field name="model">agri.production.schedule.line</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Production Schedule Lines">
                <sheet>
                    <group>
                        <group>
                            <field name="budget_category_id"/>
                            <field name="date"/>
                       </group>
                        <group>
                            <label for="quantity"/>
                            <div>
                                <field name="quantity" class="oe_inline"/><![CDATA[&nbsp;]]>
                                <field name="quantity_uom_id" class="oe_inline"/>
                            </div>
                            <field name="currency_id" invisible="1"/>
                            <label for="amount"/>
                            <div>
                                <field name="amount" class="oe_inline"/>
                                /
                                <field name="quantity_uom_id" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- agri.production.schedule views -->

    <record id="agri_production_schedule_view_search" model="ir.ui.view">
        <field name="name">agri.production.schedule.view.search</field>
        <field name="model">agri.production.schedule</field>
        <field name="arch" type="xml">
           <search string="Production Schedules">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="season_id"/>
                <field name="farm_field_ids"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Season" name="group_season" context="{'group_by': 'season_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="agri_production_schedule_view_tree" model="ir.ui.view">
        <field name="name">agri.production.schedule.view.tree</field>
        <field name="model">agri.production.schedule</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Production Schedules">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="season_id"/>
            </tree>
        </field>
    </record>

    <record id="agri_production_schedule_view_form" model="ir.ui.view">
        <field name="name">agri.production.schedule.view.form</field>
        <field name="model">agri.production.schedule</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Production Schedules">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="season_id" context="{'default_is_season': 1}"/>
                            <field name="unit_uom_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Costs" name="costs_tab">
                            <field name="line_ids" nolabel="1" 
                                context="{'default_production_schedule_id': id}"/>
                        </page>
                        <page string="Fields" name="fields_tab">
                            <field name="farm_field_ids" nolabel="1" context="{'default_partner_id': partner_id}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- agri.production.record views -->

    <record id="agri_production_record_view_search" model="ir.ui.view">
        <field name="name">agri.production.record.view.search</field>
        <field name="model">agri.production.record</field>
        <field name="arch" type="xml">
           <search string="Production Records">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="farm_field_id"/>
                <field name="cultivar_product_id"/>
                <field name="delivered_warehouse_id"/>
                <separator/>
                <filter string="Planted" name="filter_planted" domain="[('planted_date', '!=', False)]"/>
                <filter string="Delivered" name="filter_delivered" domain="[('delivered_uom_qty', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Cultivar" name="group_cultivar_product" context="{'group_by': 'cultivar_product_id'}"/>
                    <filter string="Delivery Point" name="group_delivered_warehouse" context="{'group_by': 'delivered_warehouse_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="agri_production_record_view_tree" model="ir.ui.view">
        <field name="name">agri.production.record.view.tree</field>
        <field name="model">agri.production.record</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Production Records">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="farm_field_id"/>
                <field name="planted_date"/>
                <field name="delivered_uom_qty"/>
                <field name="delivered_uom_id"/>
                <field name="delivered_t_ha"/>
                <field name="delivered_warehouse_id"/>
            </tree>
        </field>
    </record>

    <record id="agri_production_record_view_form" model="ir.ui.view">
        <field name="name">agri.production.record.view.form</field>
        <field name="model">agri.production.record</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Production Records">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="cultivar_product_id" context="{'default_type': 'product', 'default_is_cultivar': 1}"/>
                            <field name="delivered_warehouse_id"/>
                       </group>
                        <group>
                            <field name="farm_field_id" context="{'default_partner_id': partner_id}"/>
                            <field name="irrigation_type_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="season_id" context="{'default_is_season': 1}"/>
                            <field name="planted_date" attrs="{'required': [('planted_ha', '!=', 0.0)]}"/>
                            <field name="planted_ha" 
                                context="{'updated_field': 'planted_ha'}" 
                                attrs="{'required': [('planted_date', '!=', False)]}"/>
                        </group>
                        <group>
                            <field name="delivered_date"/>
                            <field name="delivered_uom_id" 
                                context="{'updated_field': 'delivered_uom_id'}" 
                                attrs="{'required': [('delivered_uom_qty', '!=', 0.0)]}"/>
                            <field name="delivered_uom_qty" 
                                context="{'updated_field': 'delivered_uom_qty'}" 
                                attrs="{'required': [('delivered_uom_id', '!=', False)]}"/>
                            <field name="delivered_t_ha" 
                                context="{'updated_field': 'delivered_t_ha'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- actions -->

    <record id="agri_production_schedule_action" model="ir.actions.act_window">
        <field name="name">Production Schedules</field>
        <field name="res_model">agri.production.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Production Schedule
            </p>
        </field>
    </record>

    <record id="agri_production_record_action" model="ir.actions.act_window">
        <field name="name">Production Records</field>
        <field name="res_model">agri.production.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Production Record
            </p>
        </field>
    </record>

    <!-- menu items -->

    <menuitem id="agri_production_menu" name="Production"
        parent="agri.agri_menu_root" 
        sequence="10" 
        groups="agri.agri_group_user"/>

    <menuitem id="agri_production_schedule_action_menu" name="Production Schedules"
        parent="agri_production_menu"  
        sequence="9"
        action="agri_production_schedule_action"/>

    <menuitem id="agri_production_record_action_menu" name="Production Records"
        parent="agri_production_menu"  
        groups="agri.agri_group_manager"
        sequence="10"
        action="agri_production_record_action"/>

</odoo>
