<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- agri.production.schedule.line views -->

    <record id="agri_production_schedule_line_view_tree" model="ir.ui.view">
        <field name="name">agri.production.schedule.line.view.tree</field>
        <field name="model">agri.production.schedule.line</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Production Schedule Lines" editable="bottom">
                <field name="product_category_id" />
                <field name="calendar_period_ids" invisible="1" />
                <field name="date_range_id" />
                <field name="quantity" />
                <field name="quantity_uom_id" string="Units" />
                <field name="currency_id" invisible="1" />
                <field name="amount" />
                <field name="sale_ok" invisible="1" />
                <field name="purchase_ok" invisible="1"  />
                <field name="is_purchase" attrs="{'readonly': ['|', ('purchase_ok', '=', False), ('sale_ok', '=', False)]}" />
                <field name="total" />
            </tree>
        </field>
    </record>

    <record id="agri_production_schedule_line_view_form" model="ir.ui.view">
        <field name="name">agri.production.schedule.line.view.form</field>
        <field name="model">agri.production.schedule.line</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Production Schedule Lines">
                <sheet>
                    <group>
                        <group>
                            <field name="product_category_id" />
                            <field name="calendar_period_ids" invisible="1" />
                            <field name="date_range_id" />
                       </group>
                        <group>
                            <field name="sale_ok" invisible="1" />
                            <field name="purchase_ok" invisible="1" />
                            <field name="is_purchase" attrs="{'invisible': ['|', ('purchase_ok', '=', False), ('sale_ok', '=', False)]}" />
                            <label for="quantity" />
                            <div>
                                <field name="quantity" class="oe_inline" /><![CDATA[&nbsp;]]>
                                <field name="quantity_uom_id" class="oe_inline" options="{'no_open': 1}" />
                            </div>
                            <field name="currency_id" invisible="1" />
                            <label for="amount" />
                            <div>
                                <field name="amount" class="oe_inline" options="{'no_open': 1}" />
                                /
                                <field name="quantity_uom_id" class="oe_inline" options="{'no_open': 1}" />
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- agri.production.schedule views -->

    <record id="agri_production_schedule_view_search" model="ir.ui.view">
        <field name="name">agri.production.schedule.view.search</field>
        <field name="model">agri.production.schedule</field>
        <field name="arch" type="xml">
           <search string="Production Schedules">
                <field name="name" />
                <field name="partner_id" />
                <field name="season_id" />
                <field name="farm_field_ids" />
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}" />
                    <filter string="Season" name="group_season" context="{'group_by': 'season_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="agri_production_schedule_view_tree" model="ir.ui.view">
        <field name="name">agri.production.schedule.view.tree</field>
        <field name="model">agri.production.schedule</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Production Schedules">
                <field name="name" />
                <field name="partner_id" />
                <field name="season_id" />
                <field name="period_id" />
            </tree>
        </field>
    </record>

    <record id="agri_production_schedule_view_form" model="ir.ui.view">
        <field name="name">agri.production.schedule.view.form</field>
        <field name="model">agri.production.schedule</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Production Schedules">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="company_id" />
                        </group>
                        <group>
                            <field name="season_id" context="{'default_is_season': 1}" />
                            <field name="period_id" options="{'no_create': 1}" />
                            <field name="area_uom_id" />
                            <field name="mass_uom_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Costs" name="costs_tab">
                            <field name="line_ids" nolabel="1"
                                context="{'default_production_schedule_id': id}" />
                        </page>
                        <page string="Fields" name="fields_tab">
                            <field name="farm_field_ids" nolabel="1" context="{'default_partner_id': partner_id}" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- actions -->

    <record id="agri_production_schedule_action" model="ir.actions.act_window">
        <field name="name">Production Schedules</field>
        <field name="res_model">agri.production.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Production Schedule
            </p>
        </field>
    </record>

</odoo>
